<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/about_logo"
                android:layout_width="140dp"
                android:layout_height="160dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitStart"
                android:alpha="1"
                android:src="@drawable/ic_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/about_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-20dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:maxLines="1"
                android:fontFamily="@font/montserrat_thin"
                android:gravity="center"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/colorText"
                android:textSize="50sp"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="30sp"
                app:autoSizeMaxTextSize="50sp"
                app:autoSizeStepGranularity="1sp"
                app:layout_constraintTop_toBottomOf="@+id/about_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/about_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:layout_marginTop="0dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:fontFamily="@font/montserrat_thin"
                android:gravity="center"
                android:text="@string/description"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/colorTextLight"
                android:textSize="19sp"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="19sp"
                app:autoSizeStepGranularity="1sp"
                app:layout_constraintTop_toBottomOf="@+id/about_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/about_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:text="v 1.1"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="110dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <Button
                    android:id="@+id/about_rate_app"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_app"
                    android:textSize="10sp"
                    android:drawableLeft="@drawable/ic_rate_app"
                    app:drawableTint="@color/colorBase"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp" />

                <Button
                    android:id="@+id/about_share_app"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/share_app"
                    android:textSize="10sp"
                    android:drawableLeft="@drawable/ic_share_app"
                    app:drawableTint="@color/colorBase"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <Button
                    android:id="@+id/about_other_apps"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/other_apps"
                    android:textSize="10sp"
                    android:drawableLeft="@drawable/ic_other_apps"
                    app:drawableTint="@color/colorBase"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp" />

                <Button
                    android:id="@+id/about_feedback"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/title_pref_feedback"
                    android:textSize="10sp"
                    android:drawableLeft="@drawable/ic_feedback_24dp"
                    app:drawableTint="@color/colorBase"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <Button
                    android:id="@+id/about_privacy_policy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/title_privacy_policy"
                    android:textSize="10sp"
                    android:drawableLeft="@drawable/ic_info_24dp"
                    app:drawableTint="@color/colorBase"
                    android:layout_weight="2"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35dp">

            <TextView
                android:id="@+id/main_about_developer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="S  Y  N  C  R  E  X"
                android:textColor="@color/colorTextLight"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/main_about_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:text="dev@syncrex.me"
                android:textColor="@color/colorTextLight"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>